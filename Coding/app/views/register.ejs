<h2>Register</h2>
<form action="/register" method="post">
    <% if(messages.error){ %>
        <span style="color: red">
        <%= messages.error %>
        </span>
    <% } %>
    <div>
        <label for="name">Username:</label>
        <input type="text" id="name" name="name" required>
    </div>
    <div>
        <label for="identity_number">Identity Number:</label>
        <input type="text" id="identity_number" name="identity_number" required>
    </div>
    <div>
        <label for="phone_number">Phone Number:</label>
        <input type="text" id="phone_number" name="phone_number">
    </div>
    <div>
        <label for="address">Address:</label>
        <input type="text" id="address" name="address">
    </div>
    <div>
        <label for="email">email</label>
        <input type="text" id="emai" name="email" required>
    </div>
    <div>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" maxlength="6" minlength="6" pattern="[0-9]*" inputmode="numeric" required>
    </div>
    <div>
        <input type="submit" value="Register">
    </div>
</form>